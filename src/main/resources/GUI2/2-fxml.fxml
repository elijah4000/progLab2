<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.PasswordField?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="https://javafx.com/fxml"
          fx:controller="GUI2.Controller2">
    <padding>
        <Insets bottom="30.0" top="20.0"/>
    </padding>

    <Label text="User Name: " GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="1" GridPane.halignment="RIGHT"
               fx:id="username"/>
    <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <PasswordField GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.halignment="RIGHT"
                   fx:id="password"/>
    <Button text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"
            GridPane.halignment="LEFT"
            onAction="#handleSubmit"
            style="-fx-font-size: 7pt; -fx-padding: 10 20 10 20;" />
    <Button text="Clear" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="2"
            GridPane.halignment="LEFT"
            onAction="#handleClear"
             />
    <Button text="Exit" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handleExit"
             />
    <Label text=" " GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="4" fx:id="Submit"/>
</GridPane>
