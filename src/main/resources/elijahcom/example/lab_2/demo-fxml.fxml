<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.PasswordField?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="https://javafx.com/fxml"
          fx:controller="elijahcom.example.lab_2.DemoController">
    <padding>
        <Insets bottom="30.0" top="20.0"/>
    </padding>

    <Label text="Welcome" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"
           GridPane.halignment="CENTER">
        <font>
            <Font name="System" size="24.0"/>
        </font>
    </Label>
    <Label text="User Name: " GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="1" GridPane.halignment="RIGHT"
               fx:id="username"/>
    <Label text="password:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <PasswordField GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="1" GridPane.halignment="RIGHT"
                   fx:id="password"/>
    <Button text="Login" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleLogin"/>
</GridPane>
